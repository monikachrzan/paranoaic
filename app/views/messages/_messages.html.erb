<% messages.each do |message| %>
  <% if message.role == "user" %>
    <div class="d-flex justify-content-end mb-2" data-controller="auto-scroll">
      <div class="bg-white px-3 pb-3 pt-3 rounded-pill">
        <%= message.content %>
      </div>
    </div>
  <% elsif message.role == "assistant" %>
    <div class="d-flex justify-content-start mb-5">
      <div class="bg-light px-3 pb-2 pt-3">
        <%= message.content %>
      </div>
    </div>
  <% end %>
<% end %>
